<%- include('layouts/header.ejs') %>

<div class="container col-xxl-8 px-4 py-5 bg-white rounded mt-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src="<%- randomWorkout.img %>" class="d-block mx-lg-auto img-fluid rounded" alt="<%- randomWorkout.workoutName %>" width="640" height="427" loading="lazy">
      <p id="img-source" class="text-center text-muted">Image from pexels.com credited to: <%- randomWorkout.imgAuth %></p>
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">Random Workout</h1>
      <h3 class="mb-3"><%- randomWorkout.workoutName %></h3>
      <p><%- randomWorkout.instruction1 %></p>
      <p><%- randomWorkout.instruction2 %></p>
      <p><%- randomWorkout.instruction3 %></p>
      <p><%- randomWorkout.instruction4 %></p>
      <p><%- randomWorkout.instruction5 %></p>
      <p><%- randomWorkout.instruction6 %></p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/randomWorkout">
          <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">New Random Workout</button>
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer.ejs') %> 